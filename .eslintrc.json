{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-use-before-define": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "max-len": ["error", { "code": 120 }],
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "no-console": "warn",
        "comma-dangle": ["error", "always-multiline"],
        "space-before-blocks": ["error", "always"],
        "space-before-function-paren": ["error", "always"],
        "quotes": ["error", "single"] // Додано це правило
    }
}
